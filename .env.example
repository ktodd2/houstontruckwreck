# Houston Traffic Monitor Configuration
# Copy this file to .env and fill in your actual values

# Email Configuration (Required for email alerts)
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=your_email@gmail.com

# System Configuration
SCRAPE_INTERVAL=60
MAX_ALERTS_PER_HOUR=20

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Security
SECRET_KEY=your_secret_key_here

# Optional: For production deployment
# DATABASE_PATH=database.db

# SMS Configuration (Optional - for text message alerts via Telnyx)
# Get your API key and phone number from https://portal.telnyx.com
SMS_ENABLED=false
TELNYX_API_KEY=KEY_xxxxxxxxxxxxxxxxxxxxxxxx
TELNYX_FROM_NUMBER=+12025551234
SMS_MAX_ALERTS_PER_HOUR=20
